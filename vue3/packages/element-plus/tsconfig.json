{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "noEmit": true,
  },
  "include": [
    "index.ts",
    "components/**/*.ts",
    "components/**/*.vue",
    "utils/**/*.ts",
    "vue.d.ts",
    "../../../shared/**/*.d.ts"
  ],
}
