{
  "compilerOptions": {
    "outDir": "dist",
    "declaration":true,
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "noEmit": true,
    "types": ["@dcloudio/types"],
  },
  "include": [
    "index.ts",
    "components/**/*.ts",
    "components/**/*.d.ts",
    "../shared/**/*.d.ts"
  ],
}
