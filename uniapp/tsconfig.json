{
  "compilerOptions": {
    "outDir": "dist",
    "declaration":true,
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "moduleResolution": "node",
    "noEmit": true,
    "types": ["@dcloudio/types"],
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "rootDir": "."
  },
  "include": [
    "index.ts",
    "components/**/*.ts",
    "components/**/*.d.ts",
    "../shared/**/*.d.ts" // 这个是为了在shared不编译时也能得到global-extend的提示
  ],
}
